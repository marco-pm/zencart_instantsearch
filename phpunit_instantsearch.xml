<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         cacheResult="false"
         colors="true"
         processIsolation="true">
    <testsuites>
        <testsuite name="Unit Tests">
            <directory>./not_for_release/testFramework/InstantSearch/Unit/</directory>
        </testsuite>
        <testsuite name="Integration Tests">
            <directory>./not_for_release/testFramework/InstantSearch/Integration/</directory>
        </testsuite>
    </testsuites>
    <coverage>
        <include>
            <file>./includes/classes/ajax/zcAjaxInstantSearchDropdown.php</file>
            <file>./includes/classes/ajax/zcAjaxInstantSearchPage.php</file>
            <file>./zc_plugins/InstantSearch/v3.0.0/classes/InstantSearch.php</file>
        </include>
    </coverage>
    <php>
        <server name="APP_ENV" value="testing"/>
        <server name="BCRYPT_ROUNDS" value="4"/>
        <server name="CACHE_DRIVER" value="array"/>
        <server name="MAIL_DRIVER" value="array"/>
        <server name="QUEUE_CONNECTION" value="sync"/>
        <server name="SESSION_DRIVER" value="array"/>
        <server name="DB_CONNECTION" value="sqlite"/>
        <server name="DB_DATABASE" value=":memory:"/>
        <server name="DATABASE_NAME" value=":memory:"/>
        <ini name="memory_limit" value="512M" />
    </php>
</phpunit>
